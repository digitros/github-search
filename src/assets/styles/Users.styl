.User__info 
    width: 90%
    display: flex
    flex-direction: column
    &:nth-of-type(1)
        border-bottom: 2px solid #cecece
        padding: 10px
    &:nth-of-type(2)
        padding: 10px
    &:nth-of-type(3)
        border-top: 2px solid #cecece
        padding: 10px

.User__avatar
    width 100%

.User__info ul li img
    height 15px
    margin-right: 5px

.User__info h2
    font-weight: 300
    color: #808080
    margin-bottom: 10px

.User__org--img
    width: 50px
    margin-right: 5px


