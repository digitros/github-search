.Search
    width: 100%
    height 200px
    background: white
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

.Search img 
    width: 45px
    margin-bottom: 30px

.Search form
    height 30px

.Search form input 
    width: 350px
    height: 30px
    border: 1px solid #649e64
    border-radius: 20px 0 0 20px
    padding: 5px 10px

.Search form button 
    width: 80px
    height: 40px
    padding: 5px 10px
    border-radius: 0 10px 10px 0
    border: none

